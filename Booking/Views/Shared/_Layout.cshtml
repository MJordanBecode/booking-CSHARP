<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Booking.styles.css" asp-append-version="true" />
</head>
<body class="p-1">
<header>
   @Html.Partial("_header/_header")
   <style>
       #mobileMenu {
           /* Transition sur l'élément principal */
           transition: clip-path 0.7s ease-out, opacity 0.3s ease-out;
       }

       .menu-closed {
           clip-path: circle(0% at top right);
           pointer-events: none;
           opacity: 0;
       }

       .menu-open {
           clip-path: circle(150% at top right);
           pointer-events: auto;
           opacity: 1;
       }

       /* Transitions pour les éléments internes */
       #mobileMenu .profile-section,
       #mobileMenu .menu-item {
           transition: all 0.4s ease-out;
       }

       /* États fermés par défaut */
       #mobileMenu .profile-section {
           transform: scale(0.95);
           opacity: 0;
       }

       #mobileMenu .menu-item {
           transform: translateY(12px) rotate(2deg);
           opacity: 0;
       }

       /* ===== OUVERTURE ===== */
       .menu-open .profile-section {
           opacity: 1;
           transform: none;
           transition-delay: 0.2s; /* Profile en premier */
       }

       .menu-open .menu-item {
           opacity: 1;
           transform: none;
       }

       .menu-open .menu-item:nth-child(1) { transition-delay: 0.3s; }
       .menu-open .menu-item:nth-child(2) { transition-delay: 0.4s; }
       .menu-open .menu-item:nth-child(3) { transition-delay: 0.5s; }
       .menu-open .menu-item:nth-child(4) { transition-delay: 0.6s; }

       /* ===== FERMETURE (MÊME ORDRE qu'à l'ouverture) ===== */
       .menu-closed .profile-section {
           transform: scale(0.95);
           opacity: 0;
           transition-delay: 0.2s; /* Profile disparaît en PREMIER (comme à l'ouverture) */
           transition-duration: 0.4s;
       }

       .menu-closed .menu-item {
           transform: translateY(12px) rotate(2deg);
           opacity: 0;
           transition-duration: 0.4s;
       }

       /* MÊME ORDRE ET MÊMES DÉLAIS qu'à l'ouverture */
       .menu-closed .menu-item:nth-child(1) { transition-delay: 0.3s; } /* Même délai qu'à l'ouverture */
       .menu-closed .menu-item:nth-child(2) { transition-delay: 0.4s; } /* Même délai qu'à l'ouverture */
       .menu-closed .menu-item:nth-child(3) { transition-delay: 0.5s; } /* Même délai qu'à l'ouverture */
       .menu-closed .menu-item:nth-child(4) { transition-delay: 0.6s; } /* Même délai qu'à l'ouverture */
   </style>
</header>
@Html.Partial("_menu/_mainMenu")
@Html.Partial("_menu/_menuFilter")
<div class="container">
    <main role="main">
        @RenderBody()
       
    </main>
</div>

<footer>
    @Html.Partial("_footer/_footer")
</footer>
@await RenderSectionAsync("Scripts", required: false)
<script src="https://unpkg.com/lucide@latest"></script>
<script>
  lucide.createIcons();
</script>


</body>
</html>
